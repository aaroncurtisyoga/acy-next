{
  "extends": "next/core-web-vitals",
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",     // Built-in modules e.g. React
          "external",    // External e.g. Next, Tanstack, etc.
          "internal",    // Internal modules e.g. Components
          "index",       // Index file
          "object"       // Imported objects
        ],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "next/**",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "**/_components/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "*.{scss,css}",
            "group": "index",
            "position": "after"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "newlines-between": "never",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
